<!--components/song-menu-item/index.wxml-->
<wxs src="/utils/format.wxs" module="formatter"></wxs>
<view class="item">
  <view class="top">
    <image class="image" mode="widthFix" src="{{item.coverImgUrl}}" />
    <view class="play-count">{{formatter.formatCount(item.playCount)}}</view>
  </view>
  <view class="bottom">{{item.name}}</view>
</view>

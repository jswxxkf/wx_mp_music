/* components/video-item-v2/index.wxss */
.related-video-item {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 24rpx;
}

.cover {
  position: relative;
  margin-right: 20rpx;
}

.cover .image {
  display: flex;
  width: 240rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.cover .play-count {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 0 10rpx;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  font-size: 24rpx;
  line-height: 1.5;
  color: #fff;
}

.cover .play-count .play-icon {
  width: 30rpx;
  margin-right: 10rpx;
}

.info {
  font-size: 30rpx;
}

.info .title {
  /* 显示两行 */
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow: hidden;
}

.info .uploader {
  font-size: 24rpx;
  color: #555555;
}

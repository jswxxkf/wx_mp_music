/* components/song-item-v1/index.wxss */
.song-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.image {
  display: flex;
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 15rpx;
  transform: translateY(0);
}

.content {
  flex: 1;
}

.content .name {
  color: #555555;
  margin-bottom: 15rpx;
}

.content .source {
  color: #999999;
  font-size: 25rpx;
}

.arrow .icon {
  width: 50rpx;
  height: 50rpx;
}

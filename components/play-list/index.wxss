/* components/play-list/index.wxss */
.container {
  position: fixed;
  left: 20rpx;
  width: 710rpx;
  box-sizing: border-box;
  z-index: 1;
  max-height: 500rpx;
  color: #26ce8a;
  box-shadow: 3px 3px 8px rgba(0, 0, 0, 0.3), -3px -3px 8px rgba(0, 0, 0, 0.3);
}

.container .play-list {
  min-height: 500rpx;
  position: relative;
}

.play-list .bg-cover {
  background-color: rgba(0, 0, 0, 0.75);
  backdrop-filter: blur(10px);
}

.play-list .bg-cover,
.play-list .bg-image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.play-list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  font-size: 30rpx;
  width: 710rpx;
  height: 100rpx;
  line-height: 1.5;
  box-sizing: border-box;
}

.play-list-item .left {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 500rpx;
}

.left .album {
  display: flex;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  transform: translateY(0);
}

.left .creator {
  width: 400rpx;
  margin-left: 20rpx;
  /* 显示一行 */
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.right .icon-play {
  display: flex;
  width: 60rpx;
  height: 60rpx;
}

/* pages/home-profile/index.wxss */
page {
  padding: 0 20rpx;
}

.user-info,
.favor-songs,
.favor-albums {
  margin-bottom: 50rpx;
}

.user-info .non-login {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 60rpx;
}

.user-info .login-prompt {
  margin: 0 50rpx;
  height: 100%;
  line-height: 60rpx;
}

.user-info .login-button,
.user-info .logout-button {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0;
  padding: 0;
  background-color: #e4e4e4;
  border-radius: 16rpx;
  transform: translateY(0);
}

.user-info .info {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.info .avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 0 50rpx;
}

.info .nickName {
  display: flex;
  align-items: center;
  margin-right: 100rpx;
}

.favor-albums .placeholder,
.favor-songs .placeholder {
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #777777;
}

.promotion {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
  line-height: 1.5;
  color: #777777;
}

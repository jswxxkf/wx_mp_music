/* pages/music-player/index.wxss */
page {
  color: #fff;
}

.bg-image,
.bg-cover {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.bg-cover {
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(30px);
}

/* 自定义导航 */
.tab {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #ddd;
}

.tab .sep {
  margin: 0 10rpx;
}

.tab .active {
  color: #fff;
  font-weight: 700;
  font-size: 30rpx;
}

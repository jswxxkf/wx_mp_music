<!--pages/detail-search/index.wxml-->
<!-- 搜索框 -->
<van-search
  value="{{searchValue}}"
  background="#f7f7f7"
  shape="round"
  bind:change="handleSearchChange"
></van-search>

<!-- 热门搜索提示词 -->
<view class="hot" wx:if="{{!searchValue.length && !suggestSongs.length}}">
  <area-header
    title="热门搜索"
    showRight="{{false}}"
    class="hot-header"
  ></area-header>
  <view class="list">
    <block wx:for="{{hotKeywords}}" wx:key="first">
      <view class="tag">{{item.first}}</view>
    </block>
  </view>
</view>

<!-- 建议搜索 -->
<view class="suggest" wx:else>
  <view class="title">搜索"{{searchValue}}"</view>
  <block wx:for="{{suggestSongs}}" wx:key="keyword">
    <view class="item">
      <image
        class="icon"
        mode="widthFix"
        src="/assets/images/icons/search_icon.png"
      />
      <text class="text">{{item.keyword}}</text>
    </view>
  </block>
</view>

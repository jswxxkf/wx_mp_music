/* pages/detail-search/index.wxss */
page {
  padding: 0 20rpx;
}

/* 热门搜索 */
.hot {
  padding: 10rpx 20rpx;
}

.hot .list {
  display: flex;
  flex-wrap: wrap;
}

.hot .tag {
  font-size: 26rpx;
  background-color: #fff;
  padding: 10rpx 12rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  transform: translateY(0);
}

.hot .tag:first-of-type {
  color: #26ce8a;
}

/* 搜索建议 */
.suggest {
  padding: 30rpx;
}

.suggest .title {
  color: #26ce8a;
  font-size: 34rpx;
  font-weight: 700;
  margin-bottom: 30rpx;
}

.suggest .item {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.suggest .item .icon {
  width: 66rpx;
  height: 50rpx;
  margin-left: -20rpx;
}

.suggest .item .text {
  font-size: 28rpx;
}

.result .title {
  color: #26ce8a;
  margin-left: 15rpx;
}

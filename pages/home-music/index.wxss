/* pages/home-music/index.wxss */
page {
  padding: 0 20rpx 44px 20rpx;
}

/* 轮播图样式 */
.swiper {
  border-radius: 10rpx;
  overflow: hidden;
  /* 真机webview渲染圆角的bug解决方案 */
  transform: translateY(0);
  margin-bottom: 20rpx;
}

.swiper-item {
  display: flex;
}

.swiper-item .swiper-image {
  width: 100%;
}

